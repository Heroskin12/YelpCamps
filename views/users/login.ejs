<%layout('layouts/boilerplate')%>
<h1>Login</h1>
<form action="/login" class="validated_form" novalidate method="POST">

    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="Enter a username..." required>
        <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Enter a password..." required>
        <div class="valid-feedback">Looks good!</div>
    </div>

    <button class="btn btn-success">Login</button>

</form>
