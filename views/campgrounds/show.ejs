<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
      <a href="/campgrounds"><--- Back </a>
        <div class="card mb-3" style="width: 18rem;">
            <img src="<%= campground.image %>" class="card-img-top" alt="Photo of <%= campground.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= campground.location %></li>
              <li class="list-group-item">$<%= campground.price %> / night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">Edit Camp</a>
                <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="Submit">Delete Camp</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
              </div>
          </div>
    </div>
</div>
    
