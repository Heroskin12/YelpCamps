<% layout('layouts/boilerplate') %>
    <h1>Add a Campground</h1>

    <form action="/campgrounds" method="POST">
        <div>
            <label for="name">Name of Campground</label>
            <input type="text" name="campground[title]" id="title" placeholder="Enter a name...">
        </div>

        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location" placeholder="Enter a location...">
        </div>
        <button type="submit">Add Campground</button>
    </form>
    <a href="/campgrounds">Cancel</a>